---
import Footer from "../components/Footer.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen ">
		<header>
			<h1 class="text-center mt-auto md:mt-12 text-4xl font-lede text-amber-700">Tobias Wright</h1>
		</header>

		<main class="flex-grow">
			<slot />
		</main>

		<footer>
			<p class="text-zinc-400 text-center mb-10">
				This is the website of Tobias Wright, solutions architectect. Site hosted by <a href="https://github.com/tobiaswright/tobiaswright.github.io">Github Pages.</a>
			</p>
		</footer>
		
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	a:hover {
		color:text-orange-500
	}
</style>
