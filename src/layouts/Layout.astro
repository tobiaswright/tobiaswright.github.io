---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<style>
			@import url('https://fonts.googleapis.com/css2?family=Bangers&family=Comic+Neue:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap');
			@import url('https://cdnjs.cloudflare.com/ajax/libs/reseter.css/1.0.8/reseter.min.css');

		</style>

		<title>{title}</title>
	</head>
	<body>
		<header style="">
			<section class="bg-violet-900" style="display:flex;justify-content:center">
				<section class="relative" style="display:flex;flex-direction:column;justify-content:center;align-items:center">
					<h1 class="drop-shadow-[5px_5px_rgba(0,0,0,1)] header text-white">Tobias Wright</h1>
					<h2 class="subheader absolute -bottom-8 rounded">I like to build stuff for the internet</h2>
				</section>
			</section>
		</header>

		<div class="my-5 flex flex-col md:flex-row md:space-x-4 md:space-y-0 max-w-5xl mx-auto">
			<aside class="w-32 px-5 py-5">
				<ul>
					<li><a class="no-underline" href="./#about">About</a></li>
					<li><a class="no-underline" href="./#projects">Projects</a></li>
					<li><a class="no-underline" href="./#writing">Writing</a></li>
					<li><a class="no-underline" href="https://www.linkedin.com/in/tobiaswright/" target="_blank">Linkedin</a></li>
					<li><a class="no-underline" href="https://github.com/tobiaswright" target="_blank">Github</a></li>
					<li><a class="no-underline" href="./now">Now</a></li>
				  </ul>
			</aside>
			<main class="w-full px-5 py-5">
				<slot />	
			</main>
		</div>

		<footer>
			<p class="text-zinc-400 text-center mb-10">
				This is the website of Tobias Wright, solutions architect. Site hosted by <a href="https://github.com/tobiaswright/tobiaswright.github.io">Github Pages.</a>
			</p>
		</footer>
		
	</body>
</html>


<style is:global>
a {
	@apply hover:text-orange-500;
	@apply underline;
  }
  ul {
	  @apply mb-4 list-disc
  }

  .header {
	font-size: 130px;
    font-family: "Bangers", system-ui, sans-serif;
  }
 .subheader {
	font-size: 20px;
	border: 5px solid black;
	padding: 9px;
	@apply bg-yellow-400;
	font-family: "Comic Neue", system-ui, sans-serif;
  }
</style>
