---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<style>
			@import url('https://fonts.googleapis.com/css2?family=Bangers&display=swap');
			@import url('https://cdnjs.cloudflare.com/ajax/libs/reseter.css/1.0.8/reseter.min.css');
		</style>

		<title>{title}</title>
	</head>
	<body>
		<header class="flex flex-row-reverse">
			<section class="flex flex-col-reverse">
				<h1>Tobias Wright</h1>
				<p>I am the best I am at what I do.</p>
			</section>
			<section>
				<div style="width:90px;height:150px;background-color:red">ee</div>
			</section>
		</header>

		<nav>
			<ul>
				<li><a class="no-underline" href="./projects">About</a></li>
				<li><a class="no-underline" href="./projects">Projects</a></li>
				<li class="text-orange-200">Writing</li>
				<li><a class="no-underline" href="https://www.linkedin.com/in/tobiaswright/" target="_blank">Linkedin</a></li>
				<li><a class="no-underline" href="https://github.com/tobiaswright" target="_blank">Github</a></li>

				<li class="text-orange-200">Now</li>
			  </ul>
		</nav>

		<main>
			<section>About</section>

			<section>Projects</section>

			<section>Writing</section>

			<!-- <slot /> -->
		</main>

		<footer>
			<p class="text-zinc-400 text-center mb-10">
				This is the website of Tobias Wright, solutions architect. Site hosted by <a href="https://github.com/tobiaswright/tobiaswright.github.io">Github Pages.</a>
			</p>
		</footer>
		
	</body>
</html>


<style is:global>
a {
	@apply hover:text-orange-500;
	@apply underline;
  }
  ul {
	  @apply mb-4 list-disc
  }
</style>
