---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<style>
			@import url('https://fonts.googleapis.com/css2?family=Bangers&display=swap');
			@import url('https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css');
		</style>

		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen bg-stone-50">
		<header class="md:container md:mx-auto py-4">
			<h1 class="text-center mt-auto md:mt-12 text-4xl text-amber-700 font-['Bangers']">
				<a class="no-underline text-amber-700" href="./">Tobias Wright</a>
			</h1>
		</header>

		<main class="flex-grow mx-auto max-w-prose">
			<slot />
		</main>

		<footer>
			<p class="text-zinc-400 text-center mb-10">
				This is the website of Tobias Wright, solutions architectect. Site hosted by <a href="https://github.com/tobiaswright/tobiaswright.github.io">Github Pages.</a>
			</p>
		</footer>
		
	</body>
</html>


<style is:global>
a {
	@apply hover:text-orange-500;
	@apply underline;
  }
  h2 {
	  @apply text-xl
  }
  ul {
	  @apply mb-4
  }
</style>
