---
import Layout from "../layouts/Layout-HTML.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div
    class="container mx-auto border-x-8 border-black px-10 bg-zinc-50 h-screen pt-8 drop-shadow-lg"
  >
    <h1 class="text-center font-lede text-3xl">
      <a href="./">Tobias Wright</a>
    </h1>
    <slot />
    <Footer />
  </div>
</Layout>
