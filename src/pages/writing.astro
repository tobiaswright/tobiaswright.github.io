---
import Layout from '../layouts/Layout.astro';

const allPosts = await Astro.glob('./posts/*.md');
---

<Layout title="Welcome to Tobias Wright. Writing">
        <h2>Writing</h2>
		<ul>
            {allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
        </ul>
</Layout>